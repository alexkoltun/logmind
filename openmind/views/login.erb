<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Logmind Login</title>

  <script type="text/javascript" src="../../common/lib/jquery-1.8.0.min.js"></script>
  <script type="text/javascript" src="../../js/bootstrap.min.js"></script>


  <link rel="stylesheet" href="../../css/bootstrap.min.css">
  <link rel="stylesheet" href="../../css/jquery-ui.css">
  <link rel="stylesheet" href="../../css/datepicker.css">
  <style type="text/css">
    body {
    padding-top: 80px;
    padding-bottom: 40px;
    background-image:url('../../images/grey.png');:
    }
  </style>
  <link href="../../favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>

<body>
  <script>
  $('document').ready(function(){
    $(".alert").alert();
  });
  </script>

  <div class="hugeotron masthead">
    <div class="container">
      <div class=row>
        <h1><img src='../../images/logmind_text.png'></h1>
        <p>Unleash the power of logs</p>
        <% if locals[:login_message] %>
        <p><span class="label label-success"><%= locals[:login_message] %></span></p>
        <% end %>
        <form action="/auth/login" method="POST">
          <input type="text" placeholder="Username" id="username" name="username" /><br>
          <input type="password" placeholder="Password" id="password" name="password" /><br>
          <button class="btn btn-success" type=submit>Login</button>
       </form>
    </div>
    </div>

  </div>

</body>

</html>
