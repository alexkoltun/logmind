<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <Product Id="33C7A976-CB64-4895-89D9-7E2428ED118C" Name="LogMind Service" Language="1033" Version="1.0.0.0" Manufacturer="LogMind"
           UpgradeCode="a53bc787-b009-4d53-bf70-6b8944b7153d">
    <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <Media Id="1" Cabinet="Cab1.cab" EmbedCab="yes" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <PropertyRef Id="NETFRAMEWORK40FULL"/>
    <Condition Message='This setup requires the .NET Framework 4.0. Please install the .NET Framework then run this installer again.'>
      <![CDATA[Installed OR NETFRAMEWORK40FULL]]>
    </Condition>

    <Feature Id="AllFeatures" Title="AllFeatures" Level="1">
      <ComponentRef Id="ChangePath"/>
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="JavaFiles" />
    </Feature>

    <UI Id="UISequence">
      <UIRef Id="WixUI_Mondo"/>
    </UI>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="logMind" >
          <Directory Id="java" Name="Java" />
        </Directory>
      </Directory>
    </Directory>
  </Fragment>


  <Fragment>

    <DirectoryRef Id="INSTALLFOLDER">
      
      <Component Id="ChangePath" Guid="DA338E16-4411-4EF2-A027-0475076D2BF3">
        <CreateFolder/>
        <Environment
              Id="Environment"
              Name="PATH"
              Part="first"
              System="yes"
              Value="[INSTALLFOLDER]"
              Action="set"/>
      </Component>
    </DirectoryRef>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">

      <Component Id="EveLogReader" Guid="*">
        <File Id="EveLogReader_Exe" Name="evLogReader.exe" Source="..\Target\evLogReader.exe" KeyPath="yes"/>
        <File Id="EveLogReader_Pdb" Name="evLogReader.pdb" Source="..\Target\evLogReader.pdb" />
      </Component>

      <Component Id="LogStash_Jar" Guid="*">
        <File Id="LogStash_Jar" Name="logstash-1.1.9-monolithic.jar" Source="..\logMindBin\logstash-1.1.9-monolithic.jar" KeyPath="yes"/>
      </Component>

      <Component Id="RunServiceBatch" Guid="*">
        <File Id="Run_Service" Name="run.bat" Source="..\logMindBin\run.bat" KeyPath="yes"/>
      </Component>

      <Component Id="InstallServiceBatch" Guid="*">
        <File Id="InstallService" Name="installService.bat" Source="..\logMindBin\installService.bat" />
      </Component>

      <Component Id="RemoveServiceBatch" Guid="*">
        <File Id="RemoveService" Name="removeService.bat" Source="..\logMindBin\removeService.bat" />
      </Component>

      <Component Id="Nssm_Exe" Guid="*">
        <File Id="Nssm_Exe" Name="nssm.exe" Source="..\logMindBin\nssm-2.16\win32\nssm.exe" KeyPath="yes"/>
      </Component>

      <Component Id="Conf_Samples" Guid="*">
        <File Id="Pipe_Conf" Name="pipe.conf" Source="..\logMindBin\pipe.conf" KeyPath="yes"/>
      </Component>

      <Component Id="NssmReg" Guid="EB12B72D-991B-4D80-B272-5CA4AE367FCE">
        <RegistryKey Root="HKLM" Key="SYSTEM\CurrentControlSet\services\LogmindService\Parameters" Action="createAndRemoveOnUninstall">
          <RegistryValue Type="string" KeyPath="yes" Name="AppDirectory" Value="[INSTALLFOLDER]" />
        </RegistryKey>
      </Component>
    </ComponentGroup>

    <!--install service -->
    <CustomAction Id="InstallServiceCommand"
                  Impersonate="yes"
                  Execute="deferred"
                  Directory="INSTALLFOLDER"
                  ExeCommand="[INSTALLFOLDER]nssm.exe install LogmindService run.bat"/>

    <CustomAction Id="RemoveServiceCommand"
                  Impersonate="yes"
                  Execute="deferred"
                  Directory="INSTALLFOLDER"
                  ExeCommand="[INSTALLFOLDER]nssm.exe remove LogmindService confirm"/>

    <InstallExecuteSequence>
      <Custom Action='InstallServiceCommand' After='InstallFiles'>NOT Installed</Custom>
      <Custom Action='RemoveServiceCommand' Before='InstallFinalize'>Installed</Custom>
    </InstallExecuteSequence>

  </Fragment>
  
</Wix>